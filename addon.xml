<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.ko-sima" name="Ko-Sima" version="1.0.3" provider-name="Stefan Bischoff">
  <requires>
    <import addon="xbmc.python" version="3.0.0" />
    <import addon="script.module.web-pdb" version="1.5.6" />
  </requires>
  <extension point="xbmc.service" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Ko-Sima can queue track, top track or whole album for similar artists.</summary>
    <description lang="en_GB">This client allows you to never run out of music when your playlist queue is getting short.</description>
    <disclaimer lang="en_GB">This is a fork of MPD_Sima</disclaimer>
    <license>GPL-3.0-or-later</license>
    <source>https://github.com/StefftheEmperor2/ko-sima</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fan_art.jpg</fanart>
    </assets>
  </extension>
</addon>
